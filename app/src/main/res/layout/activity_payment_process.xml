<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        card_view:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/edt_subscriber_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="@string/customer_num"
                    android:inputType="phone"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textlayout_periodebulan"
                android:visibility="gone"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/edit_periodebulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="Periode Bulan (contoh: 1 Bulan)"
                    android:inputType="phone"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textlayout_kodedaerah"
                android:visibility="gone"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/edit_kodedaerah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="Kode Daerah (contoh: 021)"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="3"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_pay"
                style="?android:textAppearanceSmall"
                android:layout_height="40dp"
                android:layout_width="140dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/pay"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_green"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>