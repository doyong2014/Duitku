<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.duitku"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustResize">
        <activity
            android:name=".inquiry.view.InquiryActivity"
            android:label="@string/label_inquiry"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity
            android:name=".paymentmethod.view.PaymentMethodActivity"
            android:label="@string/label_pilih_pembayaran"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

        <service android:name=".network.NetworkManager"/>

        <activity
            android:name=".login.view.LoginDuitkuActivity"
            android:label="@string/label_login"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".checkoutpage.view.CheckoutActivity"
            android:label="@string/label_checkout"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".transactionstatus.view.TransactionStatusActivity"
            android:label="@string/label_transaction_status"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".paystatus.view.PayStatusActivity"
            android:label="@string/label_transaction_status"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".redirectbankpage.view.RedirectBankPage"
            android:hardwareAccelerated="true"
            android:label="Konfirmasi"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".checkoutpage.view.ConfirmationActivity"
            android:label="@string/title_activity_confirmation"
            android:parentActivityName=".base.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.duitku.base.BaseActivity"/>
        </activity>
    </application>

</manifest>
